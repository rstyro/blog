//动画模块
//第一篇博客中-精于心，简于形-的动画（https://neveryu.github.io/page/2/）
span#top-down-samll {
  display:inline;
  position:relative;
  border-top:1px solid #222;
  border-bottom:1px solid #222;
  font-size:110%;
  cursor:pointer;
  &:hover {
    background-color: #000;
    color: #fff;
    animation: animate-yu-1 3s ease-in;
  }
}
@keyframes animate-yu-1 {
  0% {
    left:-10px;
    top:0px;
  }
  10% {
    left:10px;
    top:0px;
  }
  20% {
    left:-8px;
    top:0px;
  }
  30% {
    left:8px;
    top:0px;
  }
  40% {
    left:-5px;
    top:0px;
  }
  50% {
    left:5px;
    top:0px;
  }
  60% {
    left:-3px;
    top:0px;
  }
  70% {
    left:3px;
    top:0px;
  }
  80% {
    left:-1px;
    top:0px;
  }
  90% {
    left:1px;
    top:0px;
  }
  100% {
    left:0px;
    top:0px;
  }
}
