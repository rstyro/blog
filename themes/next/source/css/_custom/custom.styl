// Custom styles.
// 主页文章添加阴影效果
 .post {
   margin-top: 60px;
   margin-bottom: 60px;
   padding: 25px;
   -webkit-box-shadow: 0 0 6px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 6px rgba(202, 203, 204, .5);
   background-color:#fff;
  }
  
  //版权
  .post-copyright {
    margin: 1em 0 0;
    padding: 0.5em 1em;
    border-left: 3px solid #ff1700;
    background-color: #f9f9f9;
    list-style: none;
}

// 自定义页脚跳动的心样式
@keyframes heartAnimate {
    0%,100%{transform:scale(1);}
    10%,30%{transform:scale(0.9);}
    20%,40%,60%,80%{transform:scale(1.1);}
    50%,70%{transform:scale(1.1);}
}
#animate {
    animation: heartAnimate 1.33s ease-in-out infinite;
}
.with-love {
    color: rgb(255, 0, 0);
}

// 自定义的侧栏时间样式
#days {
    display: block;
    color: #2cd724;
    font-size: 13px;
    margin-top: 15px;
}
